@model Library

@{
    //Layout = "/Views/Shared/_mainLayout.cshtml";
    ViewData["Title"] = "Library Fine Update";
}
<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Update Fine for @Model.Libraryname</h1>

    <div class="card shadow mb-4">
        <div class="card-body">
            <form method="post" asp-controller="BorrowMaster" asp-action="UpdateLibraryFine">
                <div class="form-group">
                    <label for="fineAmount" class="font-weight-bold">Fine Amount (₹ per day):</label>
                    <input type="number" class="form-control" id="fineAmount" name="fineAmount" value="@Model.LibraryFineAmount" step="0.01" required />
                </div>
                <button type="submit" class="btn btn-primary">Update Fine</button>
            </form>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success mt-3">@TempData["Success"]</div>
            }
        </div>
    </div>
</div>