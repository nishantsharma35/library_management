@model library_management.Models.Borrow
@{
    Layout = "/Views/Shared/_mainLayout.cshtml";
    ViewData["Title"] = "book List";
}
<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800">Borrow a Book</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Borrow Details</h6>
        </div>
        <div class="card-body">
            <form id="AddBorrowForm" >
                 <div class="mb-3"> 
                     <label for="MemberId" class="form-label">Select Member:</label> 
                     <select asp-for="MemberId" asp-items="ViewBag.Members" class="form-control"> 
                         <option value="">Select Member</option> 
                     </select> 
                </div> 

                 <div class="mb-3"> 
                     <label for="BookId" class="form-label">Select Book:</label> 
                     <select asp-for="BookId" asp-items="ViewBag.Books" class="form-control"> 
                         <option value="">Select Book</option> 
                     </select>    
                 </div> 

                <div class="form-group">
                    <label for="IssueDate" class="form-label">Issue Date</label>
                    <input asp-for="IssueDate" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                </div>

                <div class="form-group">
                    <label for="DueDate" class="form-label">Due Date</label>
                    <input asp-for="DueDate" class="form-control" type="date" value="@DateTime.Now.AddDays(7).ToString("yyyy-MM-dd")" />
                </div>

                <button type="submit" class="btn btn-primary btn-block" id="btnborrow">
                    <span class="spinner-border spinner-border-sm d-none" id="btnLoader" role="status" aria-hidden="true"></span>
                    Borrow</button>
            </form>
        </div>
    </div>
</div>


<!-- OTP Modal -->
<div class="modal fade" id="otpModal" tabindex="-1" role="dialog" aria-labelledby="otpModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <form id="otpForm">
                <div class="modal-header">
                    <h5 class="modal-title" id="otpModalLabel">Enter OTP</h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Please enter the 6-digit OTP sent to your email/phone.</p>
                    <input type="text" id="otpInput" class="form-control" maxlength="6" placeholder="Enter OTP" required>
                    <div class="text-danger mt-2 d-none" id="otpError">Invalid OTP. Please try again.</div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Verify OTP</button>
                </div>
            </form>
        </div>
    </div>
</div>


