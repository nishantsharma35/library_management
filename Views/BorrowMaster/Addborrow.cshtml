@model library_management.Models.Borrow

<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800">Borrow a Book</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Borrow Details</h6>
        </div>
        <div class="card-body">
            <form asp-action="AddBorrow" method="post">
                 <div class="mb-3"> 
                     <label for="MemberId" class="form-label">Select Member:</label> 
                     <select asp-for="MemberId" asp-items="ViewBag.Members" class="form-control"> 
                         <option value="">Select Member</option> 
                     </select> 
                </div> 

                 <div class="mb-3"> 
                     <label for="BookId" class="form-label">Select Book:</label> 
                     <select asp-for="BookId" asp-items="ViewBag.Books" class="form-control"> 
                         <option value="">Select Book</option> 
                     </select>    
                 </div> 

                <div class="form-group">
                    <label for="IssueDate" class="form-label">Issue Date</label>
                    <input asp-for="IssueDate" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                </div>

                <div class="form-group">
                    <label for="DueDate" class="form-label">Due Date</label>
                    <input asp-for="DueDate" class="form-control" type="date" value="@DateTime.Now.AddDays(7).ToString("yyyy-MM-dd")" />
                </div>

                <button type="submit" class="btn btn-primary btn-block">Borrow</button>
            </form>
        </div>
    </div>
</div>

<!-- Include Bootstrap Select for better dropdowns -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/css/bootstrap-select.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/js/bootstrap-select.min.js"></script>
<script>
    $(document).ready(function () {
        $('.selectpicker').selectpicker();
    });
</script>






























