@model IEnumerable<library_management.Models.Library>
@{
    Layout = "/Views/Shared/_mainLayout.cshtml";
    ViewData["Title"] = "Update Library Fines";
}
<!-- Toastify CSS -->
<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">

<!-- Page Heading -->
<h1 class="h3 mb-4 text-gray-800">Update Library Fines</h1>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Library Fine Management</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Library Name</th>
                        <th>Current Fine (₹)</th>
                        <th>Update Fine</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var library in Model)
                    {
                        <tr>
                            <td>@library.Libraryname</td>
                            <td>₹@library.LibraryFineAmount</td>
                            <td>
                                <form id="updatefine" method="post" action="/Fine/UpdateFine" class="d-flex align-items-center">
                                    <input type="hidden" name="libraryId" value="@library.LibraryId" />
                                    <input type="number" name="fineAmount" value="@library.LibraryFineAmount" step="0.01" required class="form-control w-50 mr-2" />
                                    <button type="submit" class="btn btn-primary">Update</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Toastify JS -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


<!-- Include DataTables JS if needed -->
<script>
    $(document).ready(function () {
        $('#dataTable').DataTable();

    $("#updatefine").submit(function (e) {
             e.preventDefault();

        var formData = new FormData(this);

        $.ajax({
            url: '/Fine/UpdateFine',   // Controller ka sahi URL
            type: 'POST',
            data: formData,
            contentType: false,
            processData: false,
            success: function (response) {
                if (response.success) {
                    showToast(response.message, 'success');
                    $('#updatefine')[0].reset(); // Form reset
                    // Optionally: Redirect to BookList after few seconds
                    setTimeout(function () {
                        window.location.href = '/Fine/UpdateFine';
                    }, 2000);
                } else {
                    showToast(response.message, 'error');
                    // Optional: Show detailed validation errors
                    if (response.errors) {
                        console.log(response.errors);
                    }
                }
            },
            error: function () {
                showToast('Server error occurred!', 'error');
            }
        });
    });

    function showToast(message, icon = 'success') {
        Swal.fire({
            toast: true,
            position: 'top-end',
            icon: icon,
            title: message,
            showConfirmButton: false,
            timer: 3000,
            timerProgressBar: true,
            customClass: {
                popup: 'custom-toast-popup',
                title: 'custom-toast-title'
            },
            iconColor: icon === 'success' ? '#28a745' :
                icon === 'error' ? '#dc3545' :
                    icon === 'warning' ? '#ffc107' : '#17a2b8',
            didOpen: (toast) => {
                toast.addEventListener('mouseenter', Swal.stopTimer);
                toast.addEventListener('mouseleave', Swal.resumeTimer);
            }
        });
    }
    });
</script>


