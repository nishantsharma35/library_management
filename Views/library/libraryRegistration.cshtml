@model library_management.Models.Library

@{
    ViewData["Title"] = "libraryRegistration";
}
<link href="~/assets/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
<link href="~/assets/css/sb-admin-2.min.css" rel="stylesheet">

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-4">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4">Library Admin Registration</h1>
                    </div>

                    @* <!-- Loader (Always visible) --> *@
                    @* <div id="loader" class="text-center"> *@
                    @*     <div class="spinner-border text-primary" role="status"> *@
                    @*         <span class="visually-hidden">Loading...</span> *@
                    @*     </div> *@
                    @* </div> *@

                    <form id="libraryRegistration" method="post" enctype="multipart/form-data">
                        <div class="row">
                            <!-- Library Name and Profile Picture -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Libraryname" class="small">Library Name</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    <input type="text" class="form-control" asp-for="Libraryname" placeholder="Library Name">
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="libraryfile" class="small">Profile Picture</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-image"></i></span>
                                    <input type="file" class="form-control" asp-for="libraryfile">
                                </div>
                            </div>
                        </div>

                        <!-- State and City -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="State" class="small">Library State</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-location-arrow"></i></span>
                                    <select class="form-control" asp-for="State">
                                        <option value="" disabled selected>Select State</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="City" class="small">Library City</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-city"></i></span>
                                    <select class="form-control" asp-for="City">
                                        <option value="" disabled selected>Select City</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <!-- Pincode and Address -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Pincode" class="small">Library Pincode</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-map-pin"></i></span>
                                    <input type="text" class="form-control" asp-for="Pincode" placeholder="Pincode">
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Address" class="small">Library Address</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-map-pin"></i></span>
                                    <input type="text" class="form-control" asp-for="Address" placeholder="Address">
                                </div>
                            </div>
                        </div>

                        <!-- Starting and Closing Time -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="StartTime" class="small">Starting Time</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-clock"></i></span>
                                    <input type="time" class="form-control" asp-for="StartTime">
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="ClosingTime" class="small">Closing Time</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-clock"></i></span>
                                    <input type="time" class="form-control" asp-for="ClosingTime">
                                </div>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <button type="submit" class="btn btn-primary btn-user btn-block">
                            Register Account
                        </button>
                        <hr>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>










@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Show the loader when the form is submitted
        document.getElementById("libraryRegistration").onsubmit = function(event) {
            // Prevent the default form submission to allow the loader to appear first
            event.preventDefault();

            // Show the loader
            document.getElementById("loader").style.display = "block";

            // Simulate form submission (replace this with actual form submission logic)
            setTimeout(function() {
                // Simulate form submission delay
                document.getElementById("libraryRegistration").submit(); // Continue form submission after loader is shown
            }, 2000); // Simulated delay (2 seconds)
        };
    </script>
    <script src="~/libraryjs/libraryregister.js" ></script>
    <script src="~/assets/vendor/jquery/jquery.min.js"></script>
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/assets/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/assets/js/sb-admin-2.min.js"></script>

}
