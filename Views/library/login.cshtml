@model library_management.Models.LoginModel

@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Login";
}

<link href="~/assets/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
<link href="~/assets/css/sb-admin-2.min.css" rel="stylesheet">

<style>
    .bg-login-image {
        background-image: url('/images/loginimage.jpg'); /* 👈 yaha apni image ka path set karo */
        background-size: cover;
        background-position: center;
        height: 100%;
    }
</style>

<div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">
        <div class="col-xl-10 col-lg-12 col-md-9">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-6 d-none d-lg-block bg-login-image"></div> <!-- 👈 Image wala section -->

                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                                </div>
                                <form id="loginForm">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                                            <input class="form-control form-control-user" asp-for="EmailOrName" placeholder="Enter Email Or Username">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="fas fa-lock toggle-password" id="passwordToggleIcon" style="cursor: pointer;"></i>
                                            </span>
                                            <input type="password" class="form-control" asp-for="Password" id="passwordField" placeholder="Password">
                                        </div>
                                    </div>

                                    <div style="display:flex;justify-content:space-around;">
                                        @* <div class="form-check"> *@
                                        @*     <input type="checkbox" id="showPasswordCheckbox" class="form-check-input" /> *@
                                        @*     <label class="form-check-label" for="showPasswordCheckbox">Show Password</label> *@
                                        @* </div> *@

                                        <div class="form-check">
                                            <input type="checkbox" asp-for="RememberMe" class="form-check-input" />
                                            <label class="form-check-label" for="RememberMe">Remember Me!</label>
                                        </div>
                                    </div>

                                    <div class="form-group text-center">
                                        <button type="submit" id="btnSubmit" class="btn btn-primary btn-user btn-block">
                                            <span class="spinner-border spinner-border-sm d-none" id="btnLoader" role="status" aria-hidden="true"></span>
                                            Submit
                                        </button>
                                    </div>
                                    <div class="form-group text-center mt-2">
                                        <a href="/login-google" class="btn btn-google btn-user btn-block">
                                            <i class="fab fa-google fa-fw"></i> Login with Google
                                        </a>
                                    </div>
                                </form>
                                <hr>
                                <div style="display:flex;justify-content:space-around;">
                                    <div class="text-center">
                                        <a class="small" asp-action="ForgotPassword">Forgot Password?</a>
                                    </div>
                                    <div class="text-center">
                                        <a class="small" asp-action="Register">Create an Account!</a>
                                    </div>
                                </div>
                            </div>
                        </div> <!-- col-lg-6 form side -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/libraryjs/login.js"></script>
    <script src="~/assets/vendor/jquery/jquery.min.js"></script>
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/assets/js/sb-admin-2.min.js"></script>
}






