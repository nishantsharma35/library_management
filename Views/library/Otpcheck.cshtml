                                    <input type="text" maxlength="1" class="otp-input form-control mx-1 text-center" />
                                    <input type="text" maxlength="1" class="otp-input form-control mx-1 text-center" />
                                </div>

                                <!-- Hidden combined OTP field for model binding -->
                                <input type="hidden" asp-for="Otp" id="Otp" />

                                <!-- Timer and Resend -->
