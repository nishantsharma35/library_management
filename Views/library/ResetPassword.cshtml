    <form id="ResetPassword" method="post" >
    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                                <div class="col-lg-6 d-none d-lg-block p-0">
                                    <img src="/images/reset-password.png" class="img-fluid h-80 w-100" style="object-fit: contain;" />
                                </div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-2">Reset Your Password?</h1>
                                    </div>
                                    <form class="user">
                                        <div class="form-group">
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                                                <input type="text" class="form-control form-control-user"
                                                       asp-for="Password"
                                                       placeholder="Enter Password ...">
                                                </div>
                                        </div>

                                        <div class="form-group">
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                                                <input type="text" class="form-control form-control-user"
                                                       asp-for="Confirmpassword"
                                                       placeholder="Enter Confirm Password ...">
                                            </div>
                                        </div>

                                        <div class="form-login">
                                                <button type="submit" id="btnSubmit" class="btn btn-primary btn-user btn-block">Change password</button>
                                        </div>
                                    </form>
                                    <hr>
                                        <div class="text-center">
                                        <a class="small" asp-action="login">Already have an account? Login!</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    </form>




