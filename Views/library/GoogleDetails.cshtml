@model library_management.Models.GoogleSignupModel

@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Google Details";
}

<link href="~/assets/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
<link href="~/assets/css/sb-admin-2.min.css" rel="stylesheet">

<html lang="en">
<head>
    <title>Google Details</title>
    <style>
        label.error {
            color: red !important;
        }

        /* Global Body Styling */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fc; /* Keeping the background light */
            margin: 0;
            padding: 0;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        /* Center the form wrapper */
        .account-page {
            width: 100%;
            max-width: 500px;
            background-color: white; /* White background for the form only */
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            padding: 40px;
            margin-bottom: 20px;
        }

        .login-heading {
            text-align: center;
            margin-bottom: 30px;
        }

            .login-heading h3 {
                font-size: 24px;
                font-weight: bold;
                color: #4e73df;
            }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            font-size: 16px;
            font-weight: bold;
            margin-bottom: 8px;
            display: block;
        }

        .form-addons {
            position: relative;
        }

            .form-addons input,
            .form-addons select {
                width: 100%;
                padding: 10px 40px 10px 10px;
                font-size: 16px;
                border-radius: 8px;
                border: 1px solid #ccc;
                box-sizing: border-box;
            }

            .form-addons img {
                position: absolute;
                left: 10px;
                top: 50%;
                transform: translateY(-50%);
                width: 20px;
            }

        button.btn {
            width: 100%;
            padding: 12px;
            font-size: 16px;
            border-radius: 8px;
            background-color: #4e73df;
            color: white;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            button.btn:hover {
                background-color: #2e59d9;
            }

        .form-addons select {
            appearance: none;
            -webkit-appearance: none;
        }

        .login-img {
            display: none; /* Hide this if you don't want the image */
        }

        /* Full Page Flex Center */
        .main-wrapper {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
        }
    </style>
</head>
<body>
    <div class="main-wrapper">
        <div class="account-page">
            <div class="login-heading">
                <h3>Complete Google Signup</h3>
            </div>

            <form id="googleDetailsForm">
                <div class="form-group">
                    <label for="Username">Username</label>
                    <div class="form-addons">
                        <input type="text" asp-for="Username" placeholder="Enter your Username" required>
                    </div>
                </div>

                <div class="form-group">
                    <label for="Email">Email</label>
                    <div class="form-addons">
                        <input type="email" asp-for="Email" readonly>
                    </div>
                </div>

                <div class="form-group">
                    <label for="RoleId">Select Role</label>
                    <div class="form-addons">
                        <select asp-for="RoleId" required>
                            <option value="">-- Select Role --</option>
                            <option value="3">Member</option>
                            <option value="2">Library Admin</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <button type="submit" id="btnSave" class="btn btn-login">
                        <span class="spinner-border spinner-border-sm d-none" id="btnLoader" role="status" aria-hidden="true"></span>
                        Submit
                    </button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>

@section Scripts {
    <script src="~/libraryjs/GoogleDetails.js"></script>
}
