@model IEnumerable<library_management.Models.Library>

@{
    Layout = "/Views/Shared/_mainLayout.cshtml";
    ViewData["Title"] = "Admin List";
}
<link href="~/assets/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
<link href="~/assets/css/sb-admin-2.min.css" rel="stylesheet">




<div class="card shadow mb-4">
    <div class="card-header py-3 text-center ">
        <h2 class="m-0 font-weight-bold text-primary">Admin List</h2>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="80%" cellspacing="0" style="margin: 0 auto; font-size: 14px;">
             <thead>
                    <tr>
                        <th>Library Image</th>
                        <th>Name</th>
                        <th>Admin ID</th>
                        <th>Created Date</th>
                        <th>Address</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var member in Model)
                    {
                            <tr>
                                <td>
                                    <img src="@member.libraryfile" alt="img" class="img-fluid rounded-circle" style="width: 50px; height: 50px;">
                                </td>
                                <td>@member.Libraryname</td>
                                <td>@member.AdminId</td>
                                <td>@member.CreatedAt</td>
                                <td>@member.Address</td>
                                <td>
                                    <a class="me-3 btn btn-primary details-btn" href="@Url.Action("AdminDetails", "AdminMaster", new { id = member.LibraryId })">Details</a>
                                    <a class="me-3 btn btn-primary Edit-btn" href="@Url.Action("AddAdmin", "AdminMaster", new { id = member.LibraryId })">Edit</a>
                                @* <button class="me-3 btn delete-btn" data-id="@member.Id">Delete</button> *@
                                    <button class="me-3 btn btn-primary delete-btn" data-id="@member.LibraryId">Delete</button>
                                </td>
                            </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



@section Scripts {
    @* <script src="~/libraryjs/login.js"></script> *@

        <!-- Include SweetAlert2 & delete.js -->
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script src="~/libraryjs/Delete.js"></script>

        <!-- Initialize Delete Buttons with Dynamic URL -->
        <script>
            $(document).ready(function () {
                 initializeDeleteButtons('@Url.Action("DeleteAdmin", "AdminMaster")');
            });
        </script>
        <script src="~/assets/vendor/jquery/jquery.min.js"></script>
        <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

        <!-- Core plugin JavaScript-->
        <script src="~/assets/vendor/jquery-easing/jquery.easing.min.js"></script>

        <!-- Custom scripts for all pages-->
        <script src="~/assets/js/sb-admin-2.min.js"></script>


        <!-- Page level plugins -->
        <script src="~/assets/vendor/datatables/jquery.dataTables.min.js"></script>
        <script src="~/assets/vendor/datatables/dataTables.bootstrap4.min.js"></script>

        <!-- Page level custom scripts -->
        <script src="~/assets/js/demo/datatables-demo.js"></script>
}
