@model library_management.Models.Library

@{
    ViewData["Title"] = "Add Admins";
}
<link href="~/assets/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
<link href="~/assets/css/sb-admin-2.min.css" rel="stylesheet">

<div class="container">
    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Library Admin</h1>
                        </div>
                        <form id="libraryRegistration" method="post" enctype="multipart/form-data">
                            <!-- Library Name and Profile Picture -->
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <label asp-for="Libraryname" class="small">Library Name</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                                        <input type="text" class="form-control" asp-for="Libraryname" placeholder="Library Name" required>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <label asp-for="libraryfile" class="small">Profile Picture</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-image"></i></span>
                                        <input type="file" class="form-control" asp-for="libraryfile" id="ProfileFile" onchange="previewImage(event)">
                                    </div>

                                    <div class="image-preview-container mt-2">
                                        <img src="#" alt="Image Preview" id="imagePreview" style="display: none;" class="img-fluid rounded-circle border">
                                        <p id="imagePreviewText">No image selected</p>
                                    </div>

                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="input-group">
                                    <!-- Hidden input field to store AdminId -->
                                    <input type="hidden" asp-for="AdminId" value="@Model.AdminId" readonly="readonly" />
                                </div>
                            </div>

                            <!-- State and City -->
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <label asp-for="State" class="small">Library State</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-location-arrow"></i></span>
                                        <select class="form-control" asp-for="State" id="State" required>
                                            <option value="" disabled selected>Select State</option>
                                            <!-- Dynamic options will be added here -->
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <label asp-for="City" class="small">Library City</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-city"></i></span>
                                        <select class="form-control" asp-for="City" id="City" required>
                                            <option value="" disabled selected>Select City</option>
                                            <!-- Dynamic options will be added here -->
                                        </select>
                                    </div>
                                </div>
                            </div>


                            <!-- Pincode and Address -->
                            <div class="form-group row">
                                <div class="col-sm-6">
                                    <label asp-for="Pincode" class="small">Library Pincode</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-map-pin"></i></span>
                                        <input type="text" class="form-control" asp-for="Pincode" placeholder="Pincode" required>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <label asp-for="Address" class="small">Library Address</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-map-pin"></i></span>
                                        <input type="text" class="form-control" asp-for="Address" placeholder="Address" required>
                                    </div>
                                </div>
                            </div>

                            <!-- Working Hours -->
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <label for="StartTime" class="small">Starting Time</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-clock"></i></span>
                                        <input type="time" class="form-control" id="StartTime" name="StartTime" asp-for="StartTime" required>
                                    </div>
                                </div>
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <label for="ClosingTime" class="small">Closing Time</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-clock"></i></span>
                                        <input type="time" class="form-control" id="ClosingTime" name="ClosingTime" asp-for="ClosingTime" required>
                                    </div>
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <button type="submit" id="btnSubmit" class="btn btn-primary btn-user btn-block">
                                <span class="spinner-border spinner-border-sm d-none" id="btnLoader" role="status" aria-hidden="true"></span>
                                Register Admin
                            </button>
                            <hr>
                            <a href="~/AdminMaster/AdminList" class="btn btn-secondary btn-user btn-block">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script src="~/libraryjs/AddAdmin.js"></script>

    <script src="~/assets/vendor/jquery/jquery.min.js"></script>
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/assets/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/assets/js/sb-admin-2.min.js"></script>
}


