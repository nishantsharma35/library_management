@model library_management.Models.Library

@{
    ViewData["Title"] = "Add Admins";
    Layout = "/Views/Shared/_mainLayout.cshtml";
}
<link href="~/assets/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
<link href="~/assets/css/sb-admin-2.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-4">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4">Library Admin Registration</h1>
                    </div>

                    <form id="libraryRegistration" method="post" enctype="multipart/form-data">
                        <!-- Library Name & Profile -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Libraryname" class="small">Library Name</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-book"></i></span>
                                    <input type="text" class="form-control" asp-for="Libraryname" placeholder="Library Name" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="libraryfile" class="small">Profile Picture</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-image"></i></span>
                                    <input type="file" class="form-control" asp-for="libraryfile" id="ProfileFile" onchange="previewImage(event)">
                                </div>
                                <div class="mt-2 text-center">
                                    <img src="#" alt="Image Preview" id="imagePreview" style="display: none; max-height: 100px;" class="img-thumbnail rounded-circle">
                                    <p id="imagePreviewText">No image selected</p>
                                </div>
                            </div>
                        </div>

                        <!-- Hidden AdminId -->
                        <input type="hidden" asp-for="AdminId" readonly />
                        <input type="hidden" asp-for="LibraryId" readonly />

                        <!-- State & City -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="State" class="small">State</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                                    <select class="form-control" asp-for="State" id="State" required>
                                        <option value="" disabled selected>Select State</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="City" class="small">City</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-city"></i></span>
                                    <select class="form-control" asp-for="City" id="City" required>
                                        <option value="" disabled selected>Select City</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <!-- Pincode & Address -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Pincode" class="small">Pincode</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-map-pin"></i></span>
                                    <input type="text" class="form-control" asp-for="Pincode" placeholder="Pincode" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Address" class="small">Address</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-home"></i></span>
                                    <input type="text" class="form-control" asp-for="Address" placeholder="Address" required>
                                </div>
                            </div>
                        </div>

                        <!-- Working Hours -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="StartTime" class="small">Start Time</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-clock"></i></span>
                                    <input type="time" class="form-control" asp-for="StartTime" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ClosingTime" class="small">Closing Time</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-clock"></i></span>
                                    <input type="time" class="form-control" asp-for="ClosingTime" required>
                                </div>
                            </div>
                        </div>

                        <!-- Submit & Cancel -->
                        <button type="submit" class="btn btn-primary btn-user btn-block">
                            <span class="spinner-border spinner-border-sm d-none" id="btnLoader" role="status" aria-hidden="true"></span>
                            Register Admin
                        </button>
                        <input type="hidden" id="selectedState" value="@Model.State" />
                        <input type="hidden" id="selectedCity" value="@Model.City" />
                        <a href="~/AdminMaster/AdminList" class="btn btn-secondary btn-user btn-block mt-2">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/libraryjs/AddAdmin.js"></script>
    <script src="~/assets/vendor/jquery/jquery.min.js"></script>
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/assets/js/sb-admin-2.min.js"></script>
}






