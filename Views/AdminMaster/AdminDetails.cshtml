                            @*     <button type="submit" class="btn btn-success" id="btnAccept"> *@
                            @*         <i class="bi bi-arrow-repeat"></i> Accept Application? *@
                            @*     </button> *@
                            @* } *@
                            @* else *@
                            @* { *@
                            @*     <h6 class="badge bg-success p-2">@Model.VerificationStatus</h6> *@
                            @*     <button type="submit" class="btn btn-danger" id="btnReject"> *@
                            @*         <i class="bi bi-x-circle"></i> Remove Approval? *@
                            @*     </button> *@
