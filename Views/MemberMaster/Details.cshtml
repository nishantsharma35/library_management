@model library_management.Models.Member
@{
    Layout = "/Views/Shared/_mainLayout.cshtml";
    ViewData["Title"] = "member details";
}
<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header text-center bg-primary text-white">
            <h3 class="m-0">Member Details</h3>
        </div>
        <div class="card-body">
            <div class="text-center mb-3">
                <input type="hidden" asp-for="Id" value="@Model.Id" />

                <img src="@Model.Picture" alt="Profile Image" class="img-fluid rounded-circle border border-dark" style="width: 120px; height: 120px;">
                <h4 class="mt-2">@Model.Name</h4>
                <span class="badge bg-info">@ViewBag.RoleName</span>
            </div>

            <div class="table-responsive">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th>Name</th>
                            <td>@Model.Name</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>@Model.Email</td>
                        </tr>
                        <tr>
                            <th>Contact</th>
                            <td>@Model.Phoneno</td>
                        </tr>
                        <tr>
                            <th>Gender</th>
                            <td>@Model.Gender</td>
                        </tr>
                        <tr>
                            <th>Address</th>
                            <td>@Model.Address</td>
                        </tr>
                        <tr>
                            <th>State</th>
                            <td>@Model.State</td>
                        </tr>
                        <tr>
                            <th>City</th>
                            <td>@Model.City</td>
                        </tr>
                        <tr>
                            <th>Joining Date</th>
                            <td>@Model.Joiningdate?.ToString("dd MMM yyyy")</td>
                        </tr>
                        <tr>
                            <th>Verification Status</th>
                            <td>
                                @if (Model.VerificationStatus == "Pending")
                                {
                                    <span class="badge bg-warning text-dark">Pending</span>
                                }
                                else if (Model.VerificationStatus == "Rejected")
                                {
                                    <span class="badge bg-danger">Rejected</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Approved</span>
                                }
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="text-center mt-3">
                @if (Model.VerificationStatus == "Pending")
                {
                    <button class="btn btn-success" id="btnAccept">
                        <i class="fas fa-check"></i> Accept
                        <span class="btn-loader d-none"><i class="fas fa-spinner fa-spin"></i></span>
                    </button>

                    <button class="btn btn-danger" id="btnReject">
                        <i class="fas fa-times"></i> Reject
                        <span class="btn-loader d-none"><i class="fas fa-spinner fa-spin"></i></span>
                    </button>
                }
                else if (Model.VerificationStatus == "Rejected")
                {
                    <button class="btn btn-success" id="btnAccept">
                        <i class="fas fa-check"></i> Accept Application?
                        <span class="btn-loader d-none"><i class="fas fa-spinner fa-spin"></i></span>
                    </button>
                }
                else
                {
                    <button class="btn btn-danger" id="btnReject">
                        <i class="fas fa-times"></i> Remove Approval?
                        <span class="btn-loader d-none"><i class="fas fa-spinner fa-spin"></i></span>
                    </button>
                }
            </div>
    </div>
</div>

@section Scripts {
    <script src="~/libraryjs/memberstatus.js"></script>
}
