@model library_management.Models.Member@{    Layout = "/Views/Shared/_Layout.cshtml";}<link href="~/assets/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css"><link href="~/assets/css/sb-admin-2.min.css" rel="stylesheet"><div class="container">    <div class="card o-hidden border-0 shadow-lg my-5">        <div class="card-body p-0">            <!-- Nested Row within Card Body -->            <div class="row">                <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>                <div class="col-lg-7">                    <div class="p-5">                        <div class="text-center">                            <h1 class="h4 text-gray-900 mb-4">Member Management</h1>                        </div>                        <form id="SaveUser" enctype="multipart/form-data">                            <input type="text" asp-for="Id" readonly hidden="true">                            <!-- Name and Address -->                            <div class="form-group row">                                <div class="col-sm-6 mb-3 mb-sm-0">                                    <div class="input-group">                                        <span class="input-group-text"><i class="fas fa-user"></i></span>                                        <input type="text" class="form-control" asp-for="Name" placeholder="Full Name">                                    </div>                                </div>                                <div class="col-sm-6">                                    <div class="input-group">                                        <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>                                        <input type="text" class="form-control" asp-for="Address" placeholder="User Address">                                    </div>                                </div>                            </div>                            <!-- Password (only for new users) -->                            @if (Model == null || Model.Id == 0)                            {                                <div class="form-group row">                                    <div class="col-sm-6 mb-3 mb-sm-0">                                        <div class="input-group">                                            <span class="input-group-text"><i class="fas fa-lock"></i></span>                                            <input type="password" class="form-control" asp-for="Password" placeholder="Password">                                        </div>                                    </div>                                </div>                            }                            <!-- Phone Number and Joining Date -->                            <div class="form-group row">                                <div class="col-sm-6 mb-3 mb-sm-0">                                    <div class="input-group">                                        <input type="text" class="form-control" asp-for="Phoneno" placeholder="Phone Number">                                    </div>                                </div>                                <div class="col-sm-6">                                    <div class="input-group">                                        <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>                                        <input type="date" class="form-control" asp-for="Joiningdate">                                    </div>                                </div>                            </div>                            <!-- Gender and Email -->                            <div class="form-group row">                                <div class="col-sm-6 mb-3 mb-sm-0">                                    <label class="small">Gender</label>                                    <div class="form-control">                                        <input type="radio" id="male" asp-for="Gender" value="Male"> Male                                        <input type="radio" id="female" asp-for="Gender" value="Female" class="ms-3"> Female                                    </div>                                </div>                                <div class="col-sm-6">                                    <div class="input-group">                                        <span class="input-group-text"><i class="fas fa-envelope"></i></span>                                        <input type="text" class="form-control" asp-for="Email" readonly="@(Model.Id != 0)" placeholder="Email Address">                                    </div>                                </div>                            </div>                            <!-- User Type -->                            <div class="form-group row">                                <div class="col-sm-6">                                    <label>User Type</label>                                    <div class="radio">                                        <input type="radio" name="role" value="2"> Admin                                        <input type="radio" name="role" value=3 class="ms-3"> Member                                    </div>                                </div>                            </div>                            <!-- User Image -->                            <div class="form-group row">                                <div class="col-lg-8">                                    <label for="ProfileFile" class="small">User Image</label>                                    <div class="image-upload">                                        <input type="file" asp-for="profilefile" class="form-control">                                    </div>                                </div>                                <div class="col-lg-4">                                    <div class="image-preview-container">                                        <img src="#" alt="Image Preview" id="imagePreview" style="display: none;" />                                        <p id="imagePreviewText">No image selected</p>                                    </div>                                </div>                            </div>                            <!-- Submit and Cancel Buttons -->                            <button type="submit" id="btnSubmit" class="btn btn-primary btn-user btn-block">                                <span class="spinner-border spinner-border-sm d-none" id="btnLoader" role="status" aria-hidden="true"></span>                                Submit                            </button>                            <hr>                            <a href="~/MemberMaster/MemberList" class="btn btn-secondary btn-user btn-block">Cancel</a>                        </form>                    </div>                </div>            </div>        </div>    </div></div>@section Scripts {    <script src="~/libraryjs/AddMember.js"></script>    <script src="~/assets/vendor/jquery/jquery.min.js"></script>    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>    <!-- Core plugin JavaScript-->    <script src="~/assets/vendor/jquery-easing/jquery.easing.min.js"></script>    <!-- Custom scripts for all pages-->    <script src="~/assets/js/sb-admin-2.min.js"></script>}