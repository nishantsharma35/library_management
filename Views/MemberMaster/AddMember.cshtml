@model library_management.Models.Member@{    Layout = "/Views/Shared/_mainLayout.cshtml";}<link href="~/assets/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css"><link href="~/assets/css/sb-admin-2.min.css" rel="stylesheet"><link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"><div class="container">    <div class="row justify-content-center">        <div class="col-lg-10">            <div class="card o-hidden border-0 shadow-lg my-5">                <div class="card-body p-4">                    <div class="text-center">                        <h1 class="h4 text-gray-900 mb-4">Member Management</h1>                    </div>                    <form id="SaveUser" method="post" action="/MemberMaster/AddMember" enctype="multipart/form-data">                        <!-- Name & Address -->                        <div class="row">                            <div class="col-md-6 mb-3">                                <div class="input-group">                                    <span class="input-group-text"><i class="fas fa-user"></i></span>                                    <input type="text" class="form-control" asp-for="Name" placeholder="Full Name">                                </div>                            </div>                            <div class="col-md-6">                                <div class="input-group">                                    <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>                                    <input type="text" class="form-control" asp-for="Address" placeholder="User Address">                                </div>                            </div>                        </div>                        <!-- Password (for new users) -->                        @if (Model == null || Model.Id == 0)                        {                            <div class="row">                                <div class="col-md-6 mb-3">                                    <div class="input-group">                                        <span class="input-group-text">                                            <i class="fas fa-lock toggle-password" id="passwordToggleIcon" style="cursor: pointer;"></i>                                        </span>                                        <input type="password" class="form-control" asp-for="Password" id="passwordField" placeholder="Password">                                    </div>                                </div>                                <div class="col-md-6">                                    <div class="input-group">                                        <input type="text" class="form-control" asp-for="Phoneno" placeholder="Phone Number">                                    </div>                                </div>                            </div>                        }                        <!-- Phone & Joining Date -->                        <div class="row">                            <div class="col-md-6">                                <div class="input-group">                                    <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>                                    <input type="date" class="form-control" asp-for="Joiningdate">                                </div>                            </div>                            <div class="col-md-6 mb-3">                                <div class="input-group">                                    <span class="input-group-text"><i class="fas fa-location-arrow"></i></span>                                    <select class="form-control" asp-for="State">                                        <option value="" disabled selected>Select State</option>                                    </select>                                </div>                            </div>                        </div>                        <!-- State & City -->                        <div class="row">                            <div class="col-md-6">                                <div class="input-group">                                    <span class="input-group-text"><i class="fas fa-city"></i></span>                                    <select class="form-control" asp-for="City">                                        <option value="" disabled selected>Select City</option>                                    </select>                                </div>                            </div>                            <div class="col-md-6 mb-3">                                <label class="small">Gender</label>                                <div class="form-control">                                    <input type="radio" id="male" asp-for="Gender" value="Male"> Male                                    <input type="radio" id="female" asp-for="Gender" value="Female" class="ms-3"> Female                                </div>                            </div>                        </div>                        <!-- Gender & Email -->                        <div class="row">                            <div class="col-md-12 mb-3 text-center">                                <div class="input-group">                                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>                                    <input type="text" class="form-control" asp-for="Email" readonly="@(Model.Id != 0)" placeholder="Enter Email Address">                                </div>                            </div>                            <!-- Remove or hide this -->                            <input type="hidden" asp-for="RoleId" value="3" />                            <input type="hidden" asp-for="Id" />                        </div>                        <!-- User Image Upload -->                        <div class="row">                            <div class="col-md-12 mb-3 text-center">                                <label class="small">User Image</label>                                <input type="file" asp-for="profilefile" class="form-control">                                <div class="image-preview-container mt-3">                                    <img src="#" alt="Image Preview" id="imagePreview" style="display: none; max-width: 100%;" />                                    <p id="imagePreviewText">No image selected</p>                                </div>                            </div>                        </div>                        <!-- Submit & Cancel Buttons -->                        <div class="row">                            <div class="col-md-6">                                <button type="submit" id="btnSubmit" class="btn btn-primary btn-user btn-block">                                    <span class="spinner-border spinner-border-sm d-none" id="btnLoader" role="status" aria-hidden="true"></span>                                    Submit                                </button>                            </div>                            <div class="col-md-6">                                <a href="~/MemberMaster/MemberList" class="btn btn-secondary btn-user btn-block">Cancel</a>                            </div>                        </div>                    </form>                </div>            </div>        </div>    </div></div>@section Scripts {    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>    <script src="~/libraryjs/AddMember.js"></script>    @* <script src="~/assets/vendor/jquery/jquery.min.js"></script> *@    @* <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script> *@    @* <!-- Core plugin JavaScript--> *@    @* <script src="~/assets/vendor/jquery-easing/jquery.easing.min.js"></script> *@    @* <!-- Custom scripts for all pages--> *@    @* <script src="~/assets/js/sb-admin-2.min.js"></script> *@}